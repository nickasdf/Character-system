      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="CharacterPage" Loaded="Page_Loaded">

    <!--<StackPanel>
        <TextBlock Text="Hello world" FontSize="40" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </StackPanel>-->
    <Grid x:Name="grid" ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.45*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.9*"/>
            <RowDefinition Height="0.1*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="listboxCharacterStatus" Grid.Column="0" Grid.Row="0" Background="AntiqueWhite" HorizontalContentAlignment="Stretch">


        </ListBox>
        <Button Content="addAttibute" Height="30" Width="100" Grid.Column="0" Grid.Row="1"/>
        
        <ListBox x:Name="listboxCharacterObjects" Grid.Column="1" Grid.Row="0">
            
        </ListBox>
    </Grid>
</Page>
